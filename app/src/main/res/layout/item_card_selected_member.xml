<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:padding="@dimen/card_selected_member_padding">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_selected_member_image"
        android:layout_width="@dimen/item_selected_member_image_size"
        android:layout_height="@dimen/item_selected_member_image_size"
        android:contentDescription="@string/image_contentDescription"
        android:src="@drawable/ic_place_holder_grey"
        android:visibility="visible"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="@dimen/general_image_circular_border_width"
        tools:visibility="gone"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_add_member"
        android:layout_width="@dimen/item_selected_member_image_size"
        android:layout_height="@dimen/item_selected_member_image_size"
        android:contentDescription="@string/image_contentDescription"
        android:src="@drawable/ic_add_member_accent"
        android:visibility="visible"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="@dimen/general_image_circular_border_width"
        tools:visibility="visible"/>

</LinearLayout>